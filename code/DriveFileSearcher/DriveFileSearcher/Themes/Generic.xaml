<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DriveFileSearcher.Themes"
                    >
  

  <DataTemplate x:Key="DrivesListTemplate">
    <TextBlock Text="{Binding Name}" />
  </DataTemplate>

  <DataTemplate x:Key="FoldersListTemplate">
    <StackPanel Orientation="Horizontal">
      <TextBlock Text="{Binding Name}" />
      <TextBlock Text=" | " />
      <TextBlock Text="{Binding FileCount}" />
      <TextBlock Text=" files | " />
      <TextBlock Text="{Binding TotalSize}" />
      <TextBlock Text=" bytes" />
    </StackPanel>
  </DataTemplate>
  
</ResourceDictionary>